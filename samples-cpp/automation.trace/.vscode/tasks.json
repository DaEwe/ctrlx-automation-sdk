{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "linux": {
      "command": "./snapcraft.sh ${input:target}",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "type": "shell",
    },
    "tasks": [
        {
        "label": "CMake Build Snap",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "type": "shell",
        "problemMatcher": [
          "$gcc"
        ],
        "command": "cmake -DCMAKE_BUILD_KIT='${input:buildKit}' -DBUILD_SNAP=ON ..; make install; make clean; cd ..; snapcraft clean --destructive-mode",
        "options": {
          "cwd": "${workspaceFolder}/build/"
        },
      },
    ],
    "inputs": [
      {
          "id": "target",
          "type": "pickString",
          "description": "targetname",
          "options":[
            "ubuntu20-gcc-x64",
            "ubuntu20-gcc-aarch64"
          ],
          "default": "ubuntu20-gcc-x64"
          // type specific configuration attributes
      },
      {
        "id": "buildKit",
        "type": "pickString",
        "description": "CMake Build Kit",
        "options":[
          "GCC x86_64-linux-gnu",
          "GCC aarch64-linux-gnu"
        ],
        "default": "GCC x86_64-linux-gnu"
        // type specific configuration attributes
    }
  ]
  }