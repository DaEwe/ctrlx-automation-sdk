{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake Build Snap",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "shell",
      "problemMatcher": [
        "$gcc"
      ],
      "command": "cmake -DCMAKE_BUILD_KIT='${input:buildKit}' -DBUILD_SNAP=ON ..; make install; make clean; cd ..; snapcraft clean --destructive-mode; rm -rf ./generated/build",
      "options": {
        "cwd": "${workspaceFolder}/build/"
      },
    },
  ],
  "inputs": [
    {
      "id": "buildKit",
      "type": "pickString",
      "description": "CMake Build Kit",
      "options":[
        "GCC x86_64-linux-gnu",
        "GCC aarch64-linux-gnu"
      ],
      "default": "GCC x86_64-linux-gnu"
      // type specific configuration attributes
  }
]
}